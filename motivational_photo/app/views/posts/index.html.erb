<h1>All Posts</h1>

<% @posts.each do |post| %>
	<h2><%= link_to post.title, post %></h2>
	<div><%= link_to (image_tag post.image.url(:small)), post %></div>

	<%= link_to "Edit", edit_post_path(post) %> 
	<%= link_to "View", post_path(post) %> 
<% end %>

<%= link_to "Create New Post", new_post_path %> 


